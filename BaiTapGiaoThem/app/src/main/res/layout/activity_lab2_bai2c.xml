<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Lab2.Lab2Bai2.Lab2Bai2c">

    <TextView
        android:id="@+id/view1111"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_above="@id/radioGroup"
        android:layout_centerHorizontal="true"
        android:text="Câu hỏi: Quốc gia nào có diện tích lớn nhất thế giới?"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="0dp">

        <RadioButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="A. Trung Quốc" />

        <RadioButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="B. Canada" />

        <RadioButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="C. Hoa Kỳ" />

        <RadioButton
            android:id="@+id/rbtntrue"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="D. Nga" />

    </RadioGroup>

    <Button
        android:id="@+id/btnlab2bai2d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroup"
        android:layout_centerHorizontal="true"
        android:text="Xác nhận" />

</RelativeLayout>